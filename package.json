{
  "name": "scrum-poker",
  "version": "1.0.0",
  "description": "Online scrum poker for agile teams",
  "main": "dist/server/server.js",
  "repository": "git@github.com:UNRULYEON/scrum-poker.git",
  "author": "Amar Kisoensingh <amar@kisoensingh.sh>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc --project src/server && webpack --config src/client/webpack.config.js --mode production",
    "start": "npm run build && node dist/server/server.js",
    "server": "nodemon -e tsx,ts,json --watch src/server src/server/server.ts",
    "client": "webpack --config src/client/webpack.config.js --mode development --watch",
    "dev": "concurrently \"yarn server\" \"yarn client\" "
  },
  "dependencies": {
    "@material-ui/core": "^4.9.9",
    "@types/express": "^4.17.1",
    "@types/nedb": "^1.8.9",
    "@types/node": "^12.7.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.1",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "awesome-typescript-loader": "^5.2.1",
    "express": "^4.16.4",
    "immutable": "^4.0.0-rc.12",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.0",
    "random-words": "^1.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.10.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.4.4",
    "unique-names-generator": "^4.2.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.5",
    "concurrently": "^5.1.0",
    "css-loader": "^3.4.2",
    "nodemon": "^2.0.2",
    "style-loader": "^1.1.3"
  },
  "watch": {
    "build": "src/client"
  }
}
